{
	"app_lowest_price": {
		"message": "Menor preço registrado no SteamDB: <b>$price$</b>",
		"placeholders": {
			"price": {
				"content": "$1",
				"example": "1,99€"
			}
		}
	},
	"app_lowest_price_discount": {
		"message": "Menor preço registrado no SteamDB: <b>$price$</b> (com <b>$discount$%</b> de desconto)",
		"placeholders": {
			"price": {
				"content": "$1",
				"example": "1,99€"
			},
			"discount": {
				"content": "$2",
				"example": "80"
			}
		}
	},
	"app_lowest_price_limited": {
		"message": "Menor preço registrado no SteamDB: <b>$price$</b> (últimos 2 anos: <b>$price_limited$</b>)",
		"placeholders": {
			"price": {
				"content": "$1",
				"example": "1,99€"
			},
			"price_limited": {
				"content": "$2",
				"example": "5,99€"
			}
		}
	},
	"app_lowest_date": {
		"message": "Visto uma vez em $date$ ($relative$)",
		"placeholders": {
			"date": {
				"content": "$1",
				"example": "22 Aug 2018"
			},
			"relative": {
				"content": "$2",
				"example": "71 months ago"
			}
		}
	},
	"app_lowest_date_multiple": {
		"message": "Visto $seen$ vezes, a última em $date$ ($relative$)",
		"description": "This string is only used if $seen$ is higher than one, so it can not be 0 or 1.",
		"placeholders": {
			"date": {
				"content": "$1",
				"example": "22 Aug 2018"
			},
			"relative": {
				"content": "$2",
				"example": "71 months ago"
			},
			"seen": {
				"content": "$3",
				"example": "15"
			}
		}
	}
