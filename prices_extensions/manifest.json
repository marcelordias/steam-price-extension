{
  "manifest_version": 3,
  "name": "Steam Price Extension",
  "version": "1.0",
  "description": "Get the best prices for games on Steam",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.steampowered.com/*",
    "https://steamdb.info/*",
    "https://steamcommunity.com/*",
    "https://steam-price-extension.onrender.com/*"
  ],
  "action": {
    "default_popup": "onboarding.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "stores.json",
        "regions.json",
        "editions.json",
        "currencies.json",
        "platforms.json",
        "assets/white.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/app/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css",
        "onboarding.style.css"
      ]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}